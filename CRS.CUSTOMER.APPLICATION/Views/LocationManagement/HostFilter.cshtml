            }
        }

        function tag2() {
            var x = document.getElementById("tag2");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }

        function tag3() {
            var x = document.getElementById("tag3");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
