            if (modal1 && event.target !== modal1 && !modal1.contains(event.target)) {
                closeModal('modal1');
            }
        }</script>


    <script>
        var skillData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(HostSkillsModel));
        var arrayLabel = skillData.map(x => x.Label);
        var arrayValue = skillData.map(x => x.LabelValue);

        var data = {
            //labels: ["Photoshop", "イラストレーター", "microsoft office", ["Vray", "フォー ライノ"], "test", "Rhinoceros"],
            labels: arrayLabel,
            datasets: [{
                label: "",
                //data: [50, 50, 50, 100, 50, 100],
                data: arrayValue,
                borderColor: '#D75A8B',
                backgroundColor: 'rgba(215, 90, 139, 0.3)',
                borderWidth: 4,

            }]
        };

        var options = {
            plugins: {
                datalabels: {
                    display: false
                }
            },
            layout: {
                padding: {
                    left: 1,
                    right: 1,
                    // top: 10,
                    // bottom: 1
                }
            },
            scale: {
                gridLines: {
                    color: ["#FFD5E6", "#FFD5E6", "#FFBDD8", "#FF9AC3", "#FF8BBA"],
                    lineWidth: 2
                },
                ticks: {
                    display: false,
                    beginAtZero: true,
                    min: 0,
                    max: 100,
                    stepSize: 20,
                },

                angleLines: {
                    display: false
                },
            },
            legend: {
                display: false
            },

        };

        var ctx = document.getElementById("hostSkillChart").getContext("2d");

        var hostRadarChart = new Chart(ctx, {
            type: 'radar',
            data: data,
            options: options
        });

        var labels = document.querySelectorAll('#hostSkillChart > .chartjs-radar >.chartjs-legend > li > span ');
        labels.forEach(function (label) {
            label.style.overflow = 'hidden';
            label.style.textOverflow = 'ellipsis';
            label.style.whiteSpace = 'wrap';
            label.style.maxWidth = '10px'; // Set the maximum width before truncation
        });
        // Modify dataset properties
        hostRadarChart.data.datasets.forEach(function (dataset) {
            dataset.pointBackgroundColor = '#FFCFE2'; // Change the color of the spotted points
            dataset.pointBorderColor = '#FF8DBA';
            dataset.pointBorderWidth = 1;
        });

        // Update the chart
        hostRadarChart.update();
    </script>
