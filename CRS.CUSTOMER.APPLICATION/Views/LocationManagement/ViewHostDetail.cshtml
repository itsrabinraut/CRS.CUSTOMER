@{
    ViewBag.Title = "Host Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="py-[10px] px-[16px] flex justify-between border-b border-b-[#ECECEC] sticky top-0 bg-white z-[10]" onclick="history.back()">
    <div class="flex gap-[6px] items-center">
        <div class="text-xl text-warmgray cursor-pointer"><i class="las la-angle-left"></i></div>
        <div class="text-charcoalBlack text-sm">
            @CRS.CUSTOMER.APPLICATION.Resources.Resource.Back
        </div>
    </div>
    <div class="flex gap-4">
        <div class="text-xl text-warmgray cursor-pointer">
            <i class="las la-bell"></i>
        </div>
        <div class="text-xl text-warmgray cursor-pointer" data-drawer-target="drawer-right-example"
             data-drawer-show="drawer-right-example" data-drawer-placement="right" aria-controls="drawer-right-example">
            <i class="las la-bars"></i>
        </div>
    </div>

</div>
<!-- breadcrumb  -->
<div class="flex py-[8px] px-4 gap-1 items-center breadcrumb">
