        @CRS.CUSTOMER.APPLICATION.Resources.Resource.Home
    </a>
    <i class="las la-angle-right"></i>
    <a href="@Url.Action("ClubDetail","LocationManagement", new { LocationId = Model.LocationId, ClubId = Model.ClubId })" class="active">@Model.ClubName</a>
    <i class="las la-angle-right"></i>
    <a href="#">@CRS.CUSTOMER.APPLICATION.Resources.Resource.HostDetail</a>

</div>
<!-- host image  -->

<div class="flex flex-row ">
