    var HostSkillsModel = @Model.HostIdentityDetailsModel.Where(x => x.LabelType.Trim().ToUpper() == "SKILLS").ToList();
}

<style>
    .clubInfo {
        border-radius: 6px;
        border: 1px solid #EAEAEA;
        background: #F6F6F6;
        margin-left: 12.5px;
        margin-right: 12.5px;
        padding: 13px 0px 14px 14.5px;
    }

    .clubName {
        color: #292F33;
        font-size: 14px;
        font-style: normal;
        font-weight: 700;
        line-height: 100%;
    }

    .store {
        color: #404040;
        font-size: 12px;
        font-style: normal;
        font-weight: 400;
        line-height: 100%;
    }
</style>

<!-- back button -->
<div class="flex items-center  border-b border-b-[#E8E8E8] sticky top-0 bg-white z-[10] relative px-4 py-[10px] h-[44px]" onclick="history.back()">
