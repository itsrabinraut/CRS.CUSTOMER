            @if (!string.IsNullOrEmpty(@Model.HostDOB))
            {
                <p style="line-height: 180%;">
                    @CRS.CUSTOMER.APPLICATION.Resources.Resource.Birthdate :<span class="text-[#404040] font-medium tracking-[1.2px] pl-1">
                        @Model.HostDOB
                    </span>
                </p>
            }
            @if (!string.IsNullOrEmpty(@Model.HostBirthPlace))
            {
                <p style="line-height: 180%;">
                    @CRS.CUSTOMER.APPLICATION.Resources.Resource.BirthPlace :<span class="text-[#404040] font-medium tracking-[1.2px] pl-1"> @Model.HostBirthPlace</span>
                </p>
            }
            @if (!string.IsNullOrEmpty(@Model.HostBloodType))
            {
                <p style="line-height: 180%;">
                    @CRS.CUSTOMER.APPLICATION.Resources.Resource.Blood_Type :<span class="text-[#404040] font-medium tracking-[1.2px] pl-1"> @Model.HostBloodType </span>
                </p>
            }
            @if (!string.IsNullOrEmpty(@Model.HostConstellationGroup))
            {
                <p style="line-height: 180%;">
                    @CRS.CUSTOMER.APPLICATION.Resources.Resource.Constellation :<span class="text-[#404040] font-medium tracking-[1.2px] pl-1">
                        @Model.HostConstellationGroup
                    </span>
                </p>
            }
            @if (!string.IsNullOrEmpty(@Model.HostPreviousOccupation))
            {
                <p style="line-height: 180%;">
                    @CRS.CUSTOMER.APPLICATION.Resources.Resource.Former_Job :<span class="text-[#404040] font-medium tracking-[1.2px] pl-1">
                        @Model.HostPreviousOccupation
                    </span>
                </p>
            }
            @if (!string.IsNullOrEmpty(@Model.HostHeight))
            {
                <p style="line-height: 180%;">
                    @CRS.CUSTOMER.APPLICATION.Resources.Resource.Height :<span class="text-[#404040] font-medium tracking-[1.2px] pl-1">
                        @Model.HostHeight
                    </span>
                </p>
            }
            @if (!string.IsNullOrEmpty(@Model.HostLiquorStrength))
            {
                <p style="line-height: 180%;">
                    @CRS.CUSTOMER.APPLICATION.Resources.Resource.Strength_of_Alcohol :<span class="text-[#404040] font-medium tracking-[1.2px] pl-1"> @Model.HostLiquorStrength</span>
