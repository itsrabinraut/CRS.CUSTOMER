        </svg>@CRS.CUSTOMER.APPLICATION.Resources.Resource.Back
    </div>
    <div class="text-center w-full font-bold"></div>

</div>
<!-- breadcrumb  -->
<div class="flex py-[8px] px-4 gap-1 items-center breadcrumb">
    <a href="@Url.Action("Index","DashboardV2")" class="active">@CRS.CUSTOMER.APPLICATION.Resources.Resource.Home</a>
    <i class="las la-angle-right"></i>
    <a href="@Url.Action("ClubDetail_V2","LocationManagement", new { LocationId = Model.LocationId, ClubId = Model.ClubId })" class="active">@Model.ClubNameJapanese</a>
    <i class="las la-angle-right"></i>
    <a href="#">@CRS.CUSTOMER.APPLICATION.Resources.Resource.HostDetail</a>

</div>
<!-- host image  -->

<div class="flex flex-row  relative">
    <div class="flex-col overflow-y-auto   ">
        <div class="flex  overflow-x-auto mx-[16px] no-scrollbar flex-row gap-[8px] ">
            @if (Model.HostGalleryImageList != null && Model.HostGalleryImageList.Count > 0)
            {
                foreach (var item in Model.HostGalleryImageList)
                {
                    <a href="#">
                        <div class="flex h-[413px] w-[294px] rounded ">
                            <img class="object-fit rounded object-cover" src="@item"
                                 alt="modelimage" style="width:100%">
                        </div>
                    </a>
                }

            }
            else
            {
                <div class="flex h-[413px] w-[294px] rounded ">
                    <img class="object-fit rounded object-cover" src="~/Content/assets/images/customer/demo-image.jpeg"
                         alt="modelimage" style="width:100%">
                </div>
            }
        </div>
    </div>
    <!-- favourite icon -->
    @if (Model.IsBookmarked.ToUpper() == "N")
    {
        <div class="absolute  right-3" style="bottom: -1.75rem;" onclick="ManageBookmark('@Model.ClubId','@Model.HostId','host', this)">
            <img src="~/Content/assets/images/customer/favorite-unfilled.svg" alt="unfilled" style="height:59px;width:60px;" />
        </div>
    }
    else
    {
        <div class="absolute  right-3" style="bottom: -1.75rem;" onclick="ManageBookmark('@Model.ClubId','@Model.HostId','host', this)">
            <img src="~/Content/assets/images/customer/favorite-filled.svg" alt="filled" style="height:59px;width:60px;" />
        </div>
    }
