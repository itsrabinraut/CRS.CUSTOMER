@{
    ViewBag.Title = "Success";
    Layout = "~/Views/Shared/_Reservation-Layout-V2.cshtml";
}
<div id="drawer-right-example"
     class="fixed  top-0 right-0 z-[60] h-screen  overflow-y-auto transition-transform translate-x-1 bg-white w-[90%] translate-x-full" style="z-index:9999"
     aria-labelledby="drawer-right-label">

    <div class="h-full flex flex-col justify-between  overflow-y-auto bg-gray-50 ">
        <div class=" font-medium">
            <div class=" bg-[#EFEFEF] flex justify-between items-center pb-3" style="height:90px">
                <a href="#" class="flex items-center px-4 pt-4 group">
                    @if ((Session["ProfileImage"] == null))
                    {
                        <img class="rounded-full  object-cover border border-[#E1E1E1]" style="height:60px; width:60px"
                             src="~/Content/assets/images/customer/demo-image.jpeg" alt="profileimage">
                    }
                    else
                    {
                        <img class="rounded-full w-[40px] h-[40px] object-cover border border-[#E1E1E1]" style="height:60px; width:60px"
                             src="@Session["ProfileImage"]" alt="profileimage">
                    }
                    <div class="flex flex-col">

                        <span class="ml-[12px] text-[#252525]  font-[700]" style="font-size:16px"> @Session["Username"]</span>
                        <span class="ml-[12px] text-[#252525]  font-normal text-clip" style="font-size:14px; width:178px">@Session["EmailAddress"]</span>
                        <span class="ml-[12px] flex justify-start gap-[2px] items-center">
                        </span>
