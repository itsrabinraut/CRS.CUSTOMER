        <div class="rounded-[8px] bg-[#D75A8B] px-3 py-[14px] h-[40px] flex justify-center items-center w-full text-white text-sm mb-5" onclick="window.location.href='@Url.Action("ReservationHistory", "ReservationHistoryManagementV2")'">
