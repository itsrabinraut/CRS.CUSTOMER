@{
    ViewBag.Title = "よくあるご質問 ‖ ホスログ ||◤推しホストが見つかる◢|| ホストクラブ初回来店・ネット予約";
    Layout = "~/Views/Shared/_FooterLayout.cshtml";
    var MetaClubCount = ViewBag.MetaClubCount;
    var MetaHostCount = ViewBag.MetaHostCount;
    var metaContent = $"業界初！ホストクラブの初回来店がネット予約出来る「ホスログ」。ランキングやレビュー（口コミ）でお店選びが簡単に☆接客リクエストで推しホストに出会いやすい！歌舞伎町を中心に全国から厳選した{MetaClubCount}件のホストクラブ・{MetaHostCount}人のホスト情報を掲載中！";
}

<meta name="description" content="@metaContent">

<!-- breadcrum -->
<div class="flex py-[8px] px-4 gap-1 items-center breadcrumb">
    <a href="/login" class="active">ホーム</a>
    <i class="las la-angle-right"></i>
    <a href="#">よくある質問</a>
</div>


<div class="grid  mb-[16px]">

    <div class="bg-[#FFFBFD] pt-3 mb-[16px]" style="background: #FFFBFD;">
        <div style="line-height: 38px;"
             class=" mb-[16px] font-[600] grid text-[24px] text-[#101828] flex-row justify-center">
            <div class="flex flex-row justify-center">
                よくある質問

            </div>
            <div style="line-height: 24px;" class="font-[400] justify-center text-[12px] text-[#667085] ">
                ホスログに関するすべてを見つけてください。
            </div>
        </div>
    </div>


    @*QnA section*@

    <section class="px-4 flex flex-col gap-2">

        @*question*@
        <div class="flex gap-[6px] pl-4">
            <div class="text-[#fff] text-[12px] font-[900] w-[32px] h-[32px] rounded-full bg-[#F89336] flex items-center justify-center" style="padding:8px 7px">
                Q1
            </div>

            <div class="text-[14px] font-[500] text-[#101828]">
                初回時間が終了して、引き続き遊びたい場合はどのような料金体系になりますか？
            </div>
        </div>

        @*answer*@

    </section>


</div>
