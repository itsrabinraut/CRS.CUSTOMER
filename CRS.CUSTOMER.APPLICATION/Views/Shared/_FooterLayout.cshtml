<body class="md:hidden">
    <div id="backbutton" class="py-[10px] px-[16px] flex justify-between border-b border-b-[#ECECEC] sticky top-0 bg-white z-[10]" style="z-index:10">
        @{
            var url = "/Home/HomePage";
            var Username = Session["Username"]?.ToString();
            if (!string.IsNullOrEmpty(Username))
            {
                url = Url.Action("Index", "DashboardV2");
            }
            <div class="flex gap-[6px] items-center" onclick="WindowHistoryBack();">
                <div class="text-xl text-warmgray cursor-pointer"><i class="las la-angle-left"></i></div>
                <div class="text-charcoalBlack text-sm">戻る</div>
            </div>
        }
    </div>
    <div>
        @RenderBody()

    </div>
    <script>
        function WindowHistoryBack() {
            var previousUrl = document.referrer;
            if (isLoginPageWithReturnUrl(previousUrl)) {
                window.location.href = '/DashboardV2/Index';
            }
            else {
                window.history.back();
            }
        }

        function isLoginPageWithReturnUrl(url) {
            return url.includes("ReturnURL");
        }
    </script>
</body>
