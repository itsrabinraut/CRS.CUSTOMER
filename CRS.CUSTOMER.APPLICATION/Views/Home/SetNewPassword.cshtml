@model CRS.CUSTOMER.APPLICATION.Models.Home.SetRegistrationPasswordModel
@{Layout = null;}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
