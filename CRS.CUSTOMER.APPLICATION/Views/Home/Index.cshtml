            line-height: 24px;
            font-size: 14px;
            margin-top: 30px;
        }

        .termsAndContion {
            color: rgba(24, 24, 27, 0.60);
            font-weight: 700;
        }

        .termLink {
            color: #839AD6;
            font-size: 11px;
        }

        .spertator {
            width: calc((100% - 185px)/2);
            height: 1px;
            background-color: #A1A1AA;
        }

        .otherAccotunt {
            color: #666;
            text-align: center;
            font-family: "Noto Sans";
            font-size: 12px;
            font-style: normal;
            font-weight: 500;
            line-height: 166%;
            padding: 0 13px;
            white-space: nowrap;
        }

        .registerButton {
            background: #FFF;
            padding: 8px 12px;
            color: #D75A8B;
            font-weight: 600;
